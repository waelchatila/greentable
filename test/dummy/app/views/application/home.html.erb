<%= greentable([100, 101, 102], :id => 'greentable_id') do |gt, el| %>
    <% gt.footer(style: 'border-top: 2px solid red;') do |footer| %>
        <% footer.col(style: 'background-color: #ccc;') do %>
            footer td
        <% end %>
        <% footer.col(colspan: 2) do %>
            colspan=2
        <% end %>
        <% footer.col(style: 'background-color: #ccc;') do %>
            <table>
                <tr>
                    <td>I</td>
                    <td>contain</td>
                </tr>
                <tr>
                    <td colspan="2">a</td>
                </tr>
                <tr>
                    <td>sub</td>
                    <td>table</td>
                </tr>
            </table>
        <% end %>
    <% end %>
    <% gt.col('x') do %>
        <%= el %>
    <% end %>
    <% gt.col('x+1') do %>
        <%= el + 1 %>
    <% end %>
    <% gt.col('i') do %>
        <%= gt.counter.i %>
    <% end %>
    <% gt.col('first?') do %>
        <%= gt.counter.first? %>
    <% end %>
    <% gt.col('last?') do %>
        <%= gt.counter.last? %>
    <% end %>
    <% gt.col('odd?') do %>
        <%= gt.counter.odd? %>
    <% end %>
    <% gt.col('even?') do %>
        <%= gt.counter.even? %>
    <% end %>
<% end %>

